---
import Social from "./Social.astro";
import Github from "../icons/github.astro";
import LinkedIn from "../icons/linkedin.astro";

let year = new Date().getFullYear();
---

<style>
  footer {
    width: 100vw;
    background: rgba(22, 105, 122, 1);
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
    gap: 2rem;
    margin-top: auto;
    padding: 2rem 4vw;
    color: #fff;
    box-sizing: border-box;
  }

  .footer-col {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-social {
    align-items: flex-start;
  }

  .footer-links {
    align-items: flex-end;
  }
  svg {
    color: #EDE7E3;
    width: 1.5em;
  }

  .footer-icon-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #fff;
    text-decoration: none;
    font-weight: 500;
    font-size: 1.1rem;
    transition: color 0.2s;
  }
  .footer-icon-link:hover {
    color: #FFA62B;
  }

</style>


<footer>
  <div class="footer-col footer-social">
    <a href="https://github.com/gselzer" target="_blank" rel="noopener" aria-label="GitHub" class="footer-icon-link">
      <Github /> GitHub
    </a>
    <a href="https://www.linkedin.com/in/gabriel-selzer-386881271/" target="_blank" rel="noopener" aria-label="LinkedIn" class="footer-icon-link">
      <LinkedIn /> LinkedIn
    </a>
  </div>
  <div class="footer-col footer-links">
    <a href="/about">About</a>
    <a href="/blog">Blog</a>
    <a href="/tags">Tags</a>
    <a href="/">Home</a>
  </div>
</footer>